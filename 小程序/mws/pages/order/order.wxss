.topay {
    margin: 50rpx auto;
    width: 100%;
}

.modalImage{
    width: 75vw;
    height: 70vw;
}

.address {
    background-color: white;
    margin: 20rpx 20rpx;
    padding:15rpx 0;
    border-radius: 3%;
    box-shadow: 0 4px 10px 0 rgba(83, 83, 83, 0.288);
}

.contact-box {
    display: flex;
    width: 90%;
    height: auto;
    flex-direction: column;
    padding-left: 50rpx;
    margin-right: 20rpx;
}

.contact-box>view:first-child {
    flex: 1;
}

.contact-box .detail {
    font-size: 20px;
}

.contact .val {
    color: #333;
}

.contact .name-box {
    margin-top: 10rpx;
}

.contact .mobile-box {
    margin-top: 10rpx;
}

.add-new-address {

    text-align: center;
    line-height: 200rpx;
    color: gainsboro;
}