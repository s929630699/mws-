}
.activitiesImg{
  height: 450rpx;
  width: 100% ;
  box-sizing: border-box;
  position: relative;
  border-radius: 20rpx;
  margin-top: 20px;
}
.activitiesImg image{
  width: 97.5%;
  margin: 0 10rpx;
  height: 450rpx;
  border-radius: 20rpx;
  box-shadow: 0 4px 10px 0 rgba(83, 83, 83, 0.288);
}
